<h1>NEW QUESTION for test <%= @test.title %> </h1>

<form action="/tests/<%= @test.id %>/questions/" method="POST">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <p>
    <label for="question-body">Body:</label>
    <input type="text" name="question[body]" id="question-body">
  </p>

  <p>
    <label for="question-test_id">Test_id:</label>
    <input type="text" name="question[test_id]" id="question-test_id" disabled="true" value=<%= @test.id %>>
  </p>

  <input type="submit" value="create">
</form>
